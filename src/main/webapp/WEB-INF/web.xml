<web-app>
    <display-name>BehxTicketBooking</display-name>

    <servlet>
        <servlet-name>jersey-serlvet</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>service</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/booking/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>service.authentication.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/booking/alltickets</url-pattern>
        <!--<dispatcher>REQUEST</dispatcher>-->
    </filter-mapping>
    <filter>
        <filter-name>ClientFilter</filter-name>
        <filter-class>service.authentication.ClientFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ClientFilter</filter-name>
        <url-pattern>/booking/reserve</url-pattern>
        <url-pattern>/booking/finalize</url-pattern>
        <!--<dispatcher>REQUEST</dispatcher>-->
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error-pages/404.html</location>
    </error-page>
</web-app>